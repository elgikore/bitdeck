<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sp="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AudioVisualizerTest.MainWindow"
        Title="AudioVisualizerTest">
    <Grid RowDefinitions="*,Auto">
        <sp:AvaPlot x:Name="Plot" />
        <Button Grid.Row="1" Content="Play Visualizer" Click="PlayButton_Click" />
    </Grid>
</Window>
